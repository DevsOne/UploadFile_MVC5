@model UploadFile_MVC5.Models.UploadDataViewModel

@{
    ViewBag.Title = "LoadFiles";
}

<br />
@Html.ActionLink("Home", "Index", "Home")
<br />
@Html.ActionLink("Upload To Database", "UploadToDatabase", "Home")
<br />
@Html.ActionLink("Load Files From Folder", "DisplayFilesFromFolder", "Home")
<br />
<h2>Load Files From Database</h2>


@using (Html.BeginForm("DisplayFilesFromDb", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(m => m.UserName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Load" />
        </div>
    </div>
}

